<?xml version="1.0" encoding="utf-8"?>
<!--xml for each individual item in the Beveragelist-->


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/list_item_beverage_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Beverage Name"/>

    <TextView
        android:id="@+id/list_item_beverage_id_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_beverage_name_text_view"
        android:textStyle="italic"
        android:padding="4dp"
        tools:text="Beverage ID" />

    <TextView
        android:id="@+id/list_item_beverage_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_beverage_id_text_view"
        android:layout_below="@id/list_item_beverage_name_text_view"
        android:padding="4dp" />






</RelativeLayout>